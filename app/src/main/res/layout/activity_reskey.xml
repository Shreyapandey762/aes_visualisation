<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ResKeyActivity"
    android:background="@drawable/background_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Key 1 -->
            <TextView
                android:id="@+id/key1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 1"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key1GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <!-- Key 2 -->
            <TextView
                android:id="@+id/key2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 2"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key2GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 3"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key3GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 4"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key4GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key5TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 5"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key5GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key6TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 6"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key6GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />
            <TextView
                android:id="@+id/key7TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 7"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key7GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key8TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 8"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key8GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key9TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 9"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key9GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/key10TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Key 10"
                android:textSize="24sp"
                android:textColor="@android:color/white" />

            <GridLayout
                android:id="@+id/key10GridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="8"
                android:layout_marginBottom="16dp" />

            <!-- Next Button -->
            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
