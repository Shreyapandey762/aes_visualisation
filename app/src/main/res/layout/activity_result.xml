<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ResultActivity"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/textViewEncryptedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypted Text Matrix"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:id="@+id/gridLayoutEncryptedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEncryptedText"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonDecrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/gridLayoutEncryptedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="onDecryptButtonClick" />

    <TextView
        android:id="@+id/textViewDecryptedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypted Text Matrix"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/buttonDecrypt"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:id="@+id/gridLayoutDecryptedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDecryptedText"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_below="@id/gridLayoutDecryptedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="onNextButtonClick" />

</RelativeLayout>
